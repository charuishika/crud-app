<div class="form-container">
  <h3>Edit Student Details</h3>

  {{#if msg}}
    <div class="alert">{{msg}}</div>
  {{/if}}

  {{#each rows}}
  <form method="post" action="/edituser/{{this.Id}}">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" value="{{this.Name}}" required>
    </div>

    <div class="form-group">
      <label for="age">Age</label>
      <input type="text" name="age" value="{{this.Age}}" required>
    </div>

    <div class="form-group">
      <label for="city">City</label>
      <input type="text" name="city" value="{{this.City}}" required>
    </div>

    <div class="form-actions">
      <button type="submit"><i class="fas fa-save"></i> Save Changes</button>
      <a href="/" class="secondaryBtn"><i class="fas fa-table"></i> View All</a>
    </div>
  </form>
  {{/each}}
</div>
